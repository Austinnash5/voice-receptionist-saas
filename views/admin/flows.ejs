<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Call Flow Management - <%= tenant.name %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <a href="/">ü§ñ AI Voice Receptionist</a>
      </div>
      <ul class="nav-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/tenants">Tenants</a></li>
        <li><a href="/admin/numbers">Phone Numbers</a></li>
        <li class="user-menu">
          <span><%= user.email %></span>
          <a href="/logout" class="btn btn-sm">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  
  <!-- Tenant Management Tabs -->
  <div style="background: #f6f8fa; border-bottom: 1px solid #e1e4e8;">
    <div class="container">
      <div style="display: flex; gap: 0; padding: 0;">
        <a href="/admin/tenants/<%= tenant.id %>/faqs" style="padding: 1rem 1.5rem; text-decoration: none; color: #586069; border-bottom: 2px solid transparent; transition: all 0.2s;">FAQs</a>
        <a href="/admin/tenants/<%= tenant.id %>/knowledge" style="padding: 1rem 1.5rem; text-decoration: none; color: #586069; border-bottom: 2px solid transparent; transition: all 0.2s;">Knowledge Base</a>
        <a href="/admin/tenants/<%= tenant.id %>/flows" style="padding: 1rem 1.5rem; text-decoration: none; color: #0366d6; font-weight: 600; border-bottom: 2px solid #0366d6; transition: all 0.2s;">Call Flows</a>
        <a href="/admin/tenants/<%= tenant.id %>/analytics" style="padding: 1rem 1.5rem; text-decoration: none; color: #586069; border-bottom: 2px solid transparent; transition: all 0.2s;">Analytics</a>
      </div>
    </div>
  </div>
  
  <main class="main-content">
  <div class="container">
    <div class="page-header">
      <div>
        <h1>Call Flow Management</h1>
        <p class="subtitle">Configure call flows for <%= tenant.name %></p>
      </div>
      <div>
        <a href="/admin/tenants" class="btn btn-secondary">‚Üê Back to Tenants</a>
      </div>
    </div>

    <div class="info-box">
      <h3>üìû Call Flow Types</h3>
      <ul>
        <li><strong>MAIN_MENU:</strong> Primary IVR menu (press 1 for sales, 2 for support)</li>
        <li><strong>AFTER_HOURS:</strong> Handling calls outside business hours</li>
        <li><strong>VOICEMAIL:</strong> Voicemail collection and processing</li>
        <li><strong>SALES:</strong> Sales-specific conversation flow</li>
        <li><strong>SUPPORT:</strong> Support-specific conversation flow</li>
        <li><strong>CUSTOM:</strong> Custom flows for specific use cases</li>
      </ul>
    </div>

    <div class="card">
      <div class="card-header">
        <h2>Create Call Flow</h2>
      </div>
      <div class="card-body">
        <form id="flowForm">
          <div class="form-group">
            <label for="name">Flow Name *</label>
            <input type="text" id="name" name="name" class="form-control" required placeholder="e.g., Main Business Hours Menu">
          </div>

          <div class="form-group">
            <label for="flowType">Flow Type *</label>
            <select id="flowType" name="flowType" class="form-control" required>
              <option value="">Select flow type...</option>
              <option value="MAIN_MENU">Main Menu (IVR)</option>
              <option value="AFTER_HOURS">After Hours</option>
              <option value="VOICEMAIL">Voicemail</option>
              <option value="SALES">Sales Flow</option>
              <option value="SUPPORT">Support Flow</option>
              <option value="CUSTOM">Custom Flow</option>
            </select>
          </div>

          <div class="form-group">
            <label for="priority">Priority</label>
            <select id="priority" name="priority" class="form-control">
              <option value="0">Normal (0)</option>
              <option value="1">High (1)</option>
              <option value="2">Very High (2)</option>
              <option value="3">Critical (3)</option>
            </select>
            <small class="form-text">Higher priority flows are checked first</small>
          </div>

          <!-- Dynamic Configuration Builder -->
          <div id="flowConfigBuilder">
            <p class="text-muted">Select a flow type above to configure...</p>
          </div>

          <div class="form-group" style="margin-top: 1rem;">
            <label>
              <input type="checkbox" id="showAdvanced" onchange="toggleAdvanced()">
              Show Advanced (JSON Editor)
            </label>
          </div>

          <div id="advancedConfig" style="display: none;">
            <div class="form-group">
              <label for="config">Flow Configuration (JSON)</label>
              <textarea id="config" name="config" class="form-control" rows="10">{}</textarea>
              <small class="form-text">Advanced users: Edit JSON directly</small>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Create Flow</button>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2>Existing Call Flows</h2>
      </div>
      <div class="card-body">
        <div id="flowList">
          <p class="text-muted">Loading call flows...</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    const tenantId = '<%= tenant.id %>';
    let flows = [];

    // Toggle advanced JSON editor
    function toggleAdvanced() {
      const advanced = document.getElementById('advancedConfig');
      advanced.style.display = document.getElementById('showAdvanced').checked ? 'block' : 'none';
    }

    // Build form based on flow type
    document.getElementById('flowType').addEventListener('change', function() {
      buildConfigForm(this.value);
    });

    function buildConfigForm(flowType) {
      const builder = document.getElementById('flowConfigBuilder');
      
      if (!flowType) {
        builder.innerHTML = '<p class="text-muted">Select a flow type above to configure...</p>';
        return;
      }

      let html = '<div class="config-form">';

      switch(flowType) {
        case 'MAIN_MENU':
          html += `
            <h4>IVR Menu Configuration</h4>
            <div class="form-group">
              <label>Greeting Message</label>
              <textarea class="form-control" id="cfg_greeting" rows="3" placeholder="Thank you for calling. Please listen to the following options...">Thank you for calling. Press 1 for Sales, Press 2 for Support, or stay on the line to speak with someone.</textarea>
            </div>
            <div class="form-group">
              <label>Menu Options</label>
              <div id="menuOptions">
                <div class="menu-option">
                  <input type="number" placeholder="Digit (1-9)" value="1" class="form-control-sm opt-digit" style="width: 80px;">
                  <input type="text" placeholder="Description" value="Sales" class="form-control-sm opt-desc" style="width: 150px;">
                  <input type="tel" placeholder="Phone Number" value="+1234567890" class="form-control-sm opt-target" style="width: 150px;">
                </div>
                <div class="menu-option">
                  <input type="number" placeholder="Digit (1-9)" value="2" class="form-control-sm opt-digit" style="width: 80px;">
                  <input type="text" placeholder="Description" value="Support" class="form-control-sm opt-desc" style="width: 150px;">
                  <input type="tel" placeholder="Phone Number" value="+1234567891" class="form-control-sm opt-target" style="width: 150px;">
                </div>
              </div>
              <button type="button" class="btn btn-sm btn-secondary" onclick="addMenuOption()">+ Add Option</button>
            </div>
            <div class="form-group">
              <label>Timeout (seconds)</label>
              <input type="number" class="form-control" id="cfg_timeout" value="10" min="5" max="30">
            </div>
            <div class="form-group">
              <label>Default Action (if no input)</label>
              <select class="form-control" id="cfg_defaultAction">
                <option value="voicemail">Send to Voicemail</option>
                <option value="operator">Transfer to Operator</option>
                <option value="repeat">Repeat Menu</option>
              </select>
            </div>
          `;
          break;

        case 'VOICEMAIL':
          html += `
            <h4>Voicemail Configuration</h4>
            <div class="form-group">
              <label>Greeting Message</label>
              <textarea class="form-control" id="cfg_greeting" rows="3">Please leave a message after the beep. We'll get back to you as soon as possible.</textarea>
            </div>
            <div class="form-group">
              <label>Maximum Duration (seconds)</label>
              <input type="number" class="form-control" id="cfg_maxDuration" value="120" min="30" max="300">
            </div>
            <div class="form-group">
              <label>Enable Transcription</label>
              <select class="form-control" id="cfg_transcribe">
                <option value="true">Yes</option>
                <option value="false">No</option>
              </select>
            </div>
            <div class="form-group">
              <label>Email Notification</label>
              <select class="form-control" id="cfg_notifyEmail">
                <option value="true">Yes</option>
                <option value="false">No</option>
              </select>
            </div>
            <div class="form-group">
              <label>Follow-up Action</label>
              <select class="form-control" id="cfg_followUpAction">
                <option value="create_lead">Create Lead</option>
                <option value="notify_only">Notify Only</option>
                <option value="none">None</option>
              </select>
            </div>
          `;
          break;

        case 'AFTER_HOURS':
          html += `
            <h4>After Hours Configuration</h4>
            <div class="form-group">
              <label>After Hours Message</label>
              <textarea class="form-control" id="cfg_greeting" rows="3">Thank you for calling. Our office is currently closed. Our business hours are Monday through Friday, 9 AM to 5 PM.</textarea>
            </div>
            <div class="form-group">
              <label>Action</label>
              <select class="form-control" id="cfg_action">
                <option value="voicemail">Take Voicemail</option>
                <option value="emergency">Emergency Line (transfer)</option>
                <option value="hangup">Just Inform and Hangup</option>
              </select>
            </div>
            <div class="form-group">
              <label>Emergency Phone Number (optional)</label>
              <input type="tel" class="form-control" id="cfg_emergencyNumber" placeholder="+1234567890">
            </div>
          `;
          break;

        case 'SALES':
        case 'SUPPORT':
          html += `
            <h4>${flowType === 'SALES' ? 'Sales' : 'Support'} Flow Configuration</h4>
            <div class="form-group">
              <label>Initial Greeting</label>
              <textarea class="form-control" id="cfg_greeting" rows="3">${flowType === 'SALES' ? 'Thank you for your interest in our services. How can we help you today?' : 'Thank you for contacting support. Please describe the issue you\'re experiencing.'}</textarea>
            </div>
            <div class="form-group">
              <label>Qualification Questions (one per line)</label>
              <textarea class="form-control" id="cfg_questions" rows="4" placeholder="What service are you interested in?&#10;When are you looking to get started?">What service are you interested in?
When are you looking to get started?</textarea>
            </div>
            <div class="form-group">
              <label>Transfer to Agent</label>
              <select class="form-control" id="cfg_transferEnabled">
                <option value="true">Yes, transfer after qualification</option>
                <option value="false">No, collect info only</option>
              </select>
            </div>
            <div class="form-group">
              <label>Agent Phone Number</label>
              <input type="tel" class="form-control" id="cfg_agentNumber" placeholder="+1234567890">
            </div>
          `;
          break;

        case 'CUSTOM':
          html += `
            <h4>Custom Flow Configuration</h4>
            <div class="form-group">
              <label>Flow Description</label>
              <textarea class="form-control" id="cfg_description" rows="2" placeholder="Describe what this flow does..."></textarea>
            </div>
            <div class="form-group">
              <label>Greeting Message</label>
              <textarea class="form-control" id="cfg_greeting" rows="3" placeholder="Enter your custom greeting..."></textarea>
            </div>
            <div class="form-group">
              <label>Custom Instructions for AI</label>
              <textarea class="form-control" id="cfg_instructions" rows="4" placeholder="Tell the AI how to handle this call...">You are a helpful assistant. Answer questions and collect information as needed.</textarea>
            </div>
          `;
          break;
      }

      html += '</div>';
      builder.innerHTML = html;
    }

    function addMenuOption() {
      const container = document.getElementById('menuOptions');
      const div = document.createElement('div');
      div.className = 'menu-option';
      div.innerHTML = `
        <input type="number" placeholder="Digit (1-9)" class="form-control-sm opt-digit" style="width: 80px;">
        <input type="text" placeholder="Description" class="form-control-sm opt-desc" style="width: 150px;">
        <input type="tel" placeholder="Phone Number" class="form-control-sm opt-target" style="width: 150px;">
        <button type="button" class="btn btn-sm btn-danger" onclick="this.parentElement.remove()">√ó</button>
      `;
      container.appendChild(div);
    }

    function buildConfigJSON() {
      const flowType = document.getElementById('flowType').value;
      
      // If advanced mode is on, use the textarea value
      if (document.getElementById('showAdvanced').checked) {
        try {
          return JSON.parse(document.getElementById('config').value);
        } catch (e) {
          throw new Error('Invalid JSON in advanced editor');
        }
      }

      let config = {};

      switch(flowType) {
        case 'MAIN_MENU':
          const options = [];
          document.querySelectorAll('.menu-option').forEach(opt => {
            const digit = opt.querySelector('.opt-digit').value;
            const desc = opt.querySelector('.opt-desc').value;
            const target = opt.querySelector('.opt-target').value;
            if (digit && desc && target) {
              options.push({
                digit: digit,
                description: desc,
                action: 'transfer',
                target: target
              });
            }
          });
          config = {
            greeting: document.getElementById('cfg_greeting').value,
            options: options,
            timeout: parseInt(document.getElementById('cfg_timeout').value),
            defaultAction: document.getElementById('cfg_defaultAction').value
          };
          break;

        case 'VOICEMAIL':
          config = {
            greeting: document.getElementById('cfg_greeting').value,
            maxDuration: parseInt(document.getElementById('cfg_maxDuration').value),
            transcribe: document.getElementById('cfg_transcribe').value === 'true',
            notifyEmail: document.getElementById('cfg_notifyEmail').value === 'true',
            followUpAction: document.getElementById('cfg_followUpAction').value
          };
          break;

        case 'AFTER_HOURS':
          config = {
            greeting: document.getElementById('cfg_greeting').value,
            action: document.getElementById('cfg_action').value,
            emergencyNumber: document.getElementById('cfg_emergencyNumber').value || null
          };
          break;

        case 'SALES':
        case 'SUPPORT':
          const questions = document.getElementById('cfg_questions').value
            .split('\n')
            .filter(q => q.trim())
            .map(q => q.trim());
          config = {
            greeting: document.getElementById('cfg_greeting').value,
            questions: questions,
            transferEnabled: document.getElementById('cfg_transferEnabled').value === 'true',
            agentNumber: document.getElementById('cfg_agentNumber').value
          };
          break;

        case 'CUSTOM':
          config = {
            description: document.getElementById('cfg_description')?.value || '',
            greeting: document.getElementById('cfg_greeting').value,
            instructions: document.getElementById('cfg_instructions').value
          };
          break;
      }

      return config;
    }

    // Load flows
    async function loadFlows() {
      try {
        const res = await fetch(`/api/tenant/${tenantId}/flows`);
        const data = await res.json();
        
        if (data.success) {
          flows = data.flows;
          renderFlows();
        } else {
          document.getElementById('flowList').innerHTML = `<p class="text-danger">${data.error}</p>`;
        }
      } catch (error) {
        document.getElementById('flowList').innerHTML = `<p class="text-danger">Failed to load call flows</p>`;
      }
    }

    // Render flows
    function renderFlows() {
      const list = document.getElementById('flowList');
      
      if (flows.length === 0) {
        list.innerHTML = '<p class="text-muted">No call flows yet. Create one above to get started.</p>';
        return;
      }

      // Group by flow type
      const grouped = {};
      flows.forEach(flow => {
        const type = flow.flowType;
        if (!grouped[type]) grouped[type] = [];
        grouped[type].push(flow);
      });

      let html = '';
      Object.keys(grouped).sort().forEach(flowType => {
        html += `<div class="flow-category">
          <h3>${flowType.replace(/_/g, ' ')}</h3>
          <div class="flow-items">`;
        
        // Sort by priority
        grouped[flowType].sort((a, b) => b.priority - a.priority).forEach(flow => {
          html += `
            <div class="flow-item" data-id="${flow.id}">
              <div class="flow-content">
                <div class="flow-header">
                  <strong>${escapeHtml(flow.name)}</strong>
                  ${flow.priority > 0 ? `<span class="badge badge-priority">Priority: ${flow.priority}</span>` : ''}
                  <span class="badge ${flow.isActive ? 'badge-success' : 'badge-disabled'}">
                    ${flow.isActive ? 'Active' : 'Inactive'}
                  </span>
                </div>
                <div class="flow-config">
                  <details>
                    <summary>View Configuration</summary>
                    <pre>${escapeHtml(JSON.stringify(flow.config, null, 2))}</pre>
                  </details>
                </div>
              </div>
              <div class="flow-actions">
                <button onclick="editFlow('${flow.id}')" class="btn btn-sm btn-secondary">Edit</button>
                <button onclick="toggleFlow('${flow.id}', ${!flow.isActive})" class="btn btn-sm ${flow.isActive ? 'btn-warning' : 'btn-success'}">
                  ${flow.isActive ? 'Disable' : 'Enable'}
                </button>
                <button onclick="deleteFlow('${flow.id}')" class="btn btn-sm btn-danger">Delete</button>
              </div>
            </div>`;
        });

        html += `</div></div>`;
      });

      list.innerHTML = html;
    }

    // Create flow
    document.getElementById('flowForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const name = document.getElementById('name').value.trim();
      const flowType = document.getElementById('flowType').value;
      const priority = parseInt(document.getElementById('priority').value);

      if (!flowType) {
        alert('Please select a flow type');
        return;
      }

      // Build config from form fields
      let config;
      try {
        config = buildConfigJSON();
      } catch (err) {
        alert('Configuration error: ' + err.message);
        return;
      }

      try {
        const res = await fetch(`/api/tenant/${tenantId}/flows`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, flowType, config, priority })
        });

        const data = await res.json();
        
        if (data.success) {
          document.getElementById('flowForm').reset();
          document.getElementById('flowConfigBuilder').innerHTML = '<p class="text-muted">Select a flow type above to configure...</p>';
          loadFlows();
          alert('Call flow created successfully!');
        } else {
          alert('Error: ' + data.error);
        }
      } catch (error) {
        alert('Failed to create flow: ' + error.message);
      }
    });

    // Toggle flow
    async function toggleFlow(flowId, isActive) {
      try {
        const res = await fetch(`/api/tenant/${tenantId}/flows/${flowId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ isActive })
        });

        const data = await res.json();
        if (data.success) {
          loadFlows();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (error) {
        alert('Failed to update flow');
      }
    }

    // Delete flow
    async function deleteFlow(flowId) {
      if (!confirm('Are you sure you want to delete this call flow?')) return;

      try {
        const res = await fetch(`/api/tenant/${tenantId}/flows/${flowId}`, {
          method: 'DELETE'
        });

        const data = await res.json();
        if (data.success) {
          loadFlows();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (error) {
        alert('Failed to delete flow');
      }
    }

    // Edit flow
    function editFlow(flowId) {
      const flow = flows.find(f => f.id === flowId);
      if (!flow) return;

      document.getElementById('name').value = flow.name;
      document.getElementById('flowType').value = flow.flowType;
      document.getElementById('priority').value = flow.priority;
      document.getElementById('config').value = JSON.stringify(flow.config, null, 2);

      if (confirm('Edit mode: Update the fields above and click Create Flow. Delete this old version?')) {
        deleteFlow(flowId);
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Load on page load
    loadFlows();
  </script>

