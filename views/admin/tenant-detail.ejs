<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= tenant.name %> - Details</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <a href="/">ü§ñ AI Voice Receptionist</a>
      </div>
      <ul class="nav-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/tenants">Tenants</a></li>
        <li><a href="/admin/numbers">Phone Numbers</a></li>
        <li class="user-menu">
          <span><%= user.email %></span>
          <a href="/logout" class="btn btn-sm">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <main class="main-content">
    <div class="container">
      <div class="page-header">
        <div>
          <h1><%= tenant.name %></h1>
          <p class="subtitle">Tenant Details and Configuration</p>
        </div>
        <div>
          <a href="/admin/tenants" class="btn btn-secondary">‚Üê Back to Tenants</a>
        </div>
      </div>

      <div class="grid-2">
        <!-- Basic Information -->
        <div class="card">
          <div class="card-header">
            <h2>Basic Information</h2>
          </div>
          <div class="card-body">
            <div class="info-row">
              <strong>Name:</strong>
              <span><%= tenant.name %></span>
            </div>
            <div class="info-row">
              <strong>Slug:</strong>
              <code><%= tenant.slug %></code>
            </div>
            <div class="info-row">
              <strong>Status:</strong>
              <span class="badge badge-<%= tenant.status.toLowerCase() %>"><%= tenant.status %></span>
            </div>
            <div class="info-row">
              <strong>Created:</strong>
              <span><%= new Date(tenant.createdAt).toLocaleString() %></span>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
          <div class="card-header">
            <h2>Quick Actions</h2>
          </div>
          <div class="card-body">
            <div class="action-grid">
              <a href="/admin/tenants/<%= tenant.id %>/faqs" class="action-card">
                <div class="action-icon">üìã</div>
                <div class="action-label">FAQs</div>
                <div class="action-desc">Manage frequently asked questions</div>
              </a>
              <a href="/admin/tenants/<%= tenant.id %>/knowledge" class="action-card">
                <div class="action-icon">üìö</div>
                <div class="action-label">Knowledge Base</div>
                <div class="action-desc">Manage knowledge entries</div>
              </a>
              <a href="/admin/tenants/<%= tenant.id %>/flows" class="action-card">
                <div class="action-icon">üîÑ</div>
                <div class="action-label">Call Flows</div>
                <div class="action-desc">Configure call routing</div>
              </a>
              <a href="/admin/tenants/<%= tenant.id %>/test" class="action-card" style="background: #e7f3ff; border-color: #007bff;">
                <div class="action-icon">üß™</div>
                <div class="action-label">Test AI Knowledge</div>
                <div class="action-desc">See what your AI knows</div>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Phone Numbers -->
      <div class="card">
        <div class="card-header">
          <h2>Phone Numbers (<%= tenant.twilioNumbers.length %>)</h2>
        </div>
        <div class="card-body">
          <% if (tenant.twilioNumbers.length > 0) { %>
            <table class="data-table">
              <thead>
                <tr>
                  <th>Phone Number</th>
                  <th>Status</th>
                  <th>Assigned</th>
                </tr>
              </thead>
              <tbody>
                <% tenant.twilioNumbers.forEach(number => { %>
                  <tr>
                    <td><code><%= number.phoneNumber %></code></td>
                    <td><span class="badge badge-<%= number.status.toLowerCase() %>"><%= number.status %></span></td>
                    <td><%= new Date(number.createdAt).toLocaleDateString() %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted">No phone numbers assigned yet.</p>
          <% } %>
        </div>
      </div>

      <!-- Users -->
      <div class="card">
        <div class="card-header">
          <h2>Users (<%= tenant.users.length %>)</h2>
        </div>
        <div class="card-body">
          <% if (tenant.users.length > 0) { %>
            <table class="data-table">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Role</th>
                  <th>Created</th>
                </tr>
              </thead>
              <tbody>
                <% tenant.users.forEach(u => { %>
                  <tr>
                    <td><%= u.email %></td>
                    <td><span class="badge badge-info"><%= u.role %></span></td>
                    <td><%= new Date(u.createdAt).toLocaleDateString() %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted">No users found.</p>
          <% } %>
        </div>
      </div>

      <!-- Business Hours -->
      <div class="card">
        <div class="card-header">
          <h2>Business Hours</h2>
        </div>
        <div class="card-body">
          <% if (tenant.businessHours && tenant.businessHours.length > 0) { %>
            <table class="data-table">
              <thead>
                <tr>
                  <th>Day</th>
                  <th>Open</th>
                  <th>Close</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% 
                  const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                  tenant.businessHours.forEach(bh => { 
                %>
                  <tr>
                    <td><%= days[bh.dayOfWeek] %></td>
                    <td><%= bh.openTime || '-' %></td>
                    <td><%= bh.closeTime || '-' %></td>
                    <td>
                      <span class="badge badge-<%= bh.isOpen ? 'success' : 'secondary' %>">
                        <%= bh.isOpen ? 'Open' : 'Closed' %>
                      </span>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted">No business hours configured.</p>
          <% } %>
        </div>
      </div>

      <!-- Receptionist Config -->
      <% if (tenant.receptionistConfig) { %>
      <div class="card">
        <div class="card-header">
          <h2>Receptionist Configuration</h2>
        </div>
        <div class="card-body">
          <div class="info-row">
            <strong>Greeting Message:</strong>
            <span><%= tenant.receptionistConfig.greetingMessage || 'Not set' %></span>
          </div>
          <div class="info-row">
            <strong>IVR Enabled:</strong>
            <span class="badge badge-<%= tenant.receptionistConfig.enableIVR ? 'success' : 'secondary' %>">
              <%= tenant.receptionistConfig.enableIVR ? 'Yes' : 'No' %>
            </span>
          </div>
          <% if (tenant.receptionistConfig.enableIVR && tenant.receptionistConfig.ivrMenuPrompt) { %>
          <div class="info-row">
            <strong>IVR Prompt:</strong>
            <span><%= tenant.receptionistConfig.ivrMenuPrompt %></span>
          </div>
          <% } %>
          <div class="info-row">
            <strong>Voicemail Enabled:</strong>
            <span class="badge badge-<%= tenant.receptionistConfig.enableVoicemail ? 'success' : 'secondary' %>">
              <%= tenant.receptionistConfig.enableVoicemail ? 'Yes' : 'No' %>
            </span>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Update Form -->
      <div class="card">
        <div class="card-header">
          <h2>Update Tenant</h2>
        </div>
        <div class="card-body">
          <form method="POST" action="/admin/tenants/<%= tenant.id %>">
            <div class="form-group">
              <label for="name">Tenant Name</label>
              <input type="text" id="name" name="name" class="form-control" value="<%= tenant.name %>" required>
            </div>

            <div class="form-group">
              <label for="status">Status</label>
              <select id="status" name="status" class="form-control">
                <option value="ACTIVE" <%= tenant.status === 'ACTIVE' ? 'selected' : '' %>>Active</option>
                <option value="SUSPENDED" <%= tenant.status === 'SUSPENDED' ? 'selected' : '' %>>Suspended</option>
                <option value="INACTIVE" <%= tenant.status === 'INACTIVE' ? 'selected' : '' %>>Inactive</option>
              </select>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Update Tenant</button>
              <button type="button" onclick="if(confirm('Are you sure you want to delete this tenant? This cannot be undone.')) { document.getElementById('deleteForm').submit(); }" class="btn btn-danger">
                Delete Tenant
              </button>
            </div>
          </form>

          <form id="deleteForm" method="POST" action="/admin/tenants/<%= tenant.id %>/delete" style="display: none;">
          </form>
        </div>
      </div>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> AI Voice Receptionist. All rights reserved.</p>
    </div>
  </footer>

  <style>
    .grid-2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .info-row {
      display: flex;
      justify-content: space-between;
      padding: 0.75rem 0;
      border-bottom: 1px solid #e3e6ea;
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .action-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .action-card {
      text-align: center;
      padding: 1.5rem;
      background: #f8f9fa;
      border-radius: 8px;
      text-decoration: none;
      color: inherit;
      transition: all 0.2s;
      border: 2px solid transparent;
    }

    .action-card:hover {
      background: #e9ecef;
      border-color: #007bff;
      transform: translateY(-2px);
    }

    .action-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .action-label {
      font-weight: bold;
      font-size: 1.1rem;
      margin-bottom: 0.25rem;
    }

    .action-desc {
      font-size: 0.875rem;
      color: #6c757d;
    }

    .form-actions {
      display: flex;
      gap: 1rem;
    }

    @media (max-width: 768px) {
      .grid-2 {
        grid-template-columns: 1fr;
      }

      .action-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</body>
</html>
