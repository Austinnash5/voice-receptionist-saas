<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Phone Numbers - AI Voice Receptionist</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <a href="/">ðŸ¤– AI Voice Receptionist</a>
      </div>
      <ul class="nav-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/tenants">Tenants</a></li>
        <li><a href="/admin/numbers" class="active">Phone Numbers</a></li>
        <li class="user-menu">
          <span><%= user.email %></span>
          <a href="/logout" class="btn btn-sm">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <main class="main-content">
    <div class="container">
      <h1>Manage Phone Numbers</h1>

      <div class="card">
        <h3>Assign New Number</h3>
        <form action="/admin/numbers" method="POST" class="form-inline">
          <div class="form-group">
            <label>Phone Number (E.164)</label>
            <input type="text" name="phoneNumber" placeholder="+15551234567" required>
          </div>
          <div class="form-group">
            <label>Friendly Name</label>
            <input type="text" name="friendlyName" placeholder="Main Line">
          </div>
          <div class="form-group">
            <label>Twilio SID</label>
            <input type="text" name="sid" placeholder="PNxxxx">
          </div>
          <div class="form-group">
            <label>Tenant</label>
            <select name="tenantId" required>
              <option value="">Select Tenant</option>
              <% /* You would need to pass tenants list */ %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Assign Number</button>
        </form>
      </div>

      <div class="table-container">
        <table class="data-table">
          <thead>
            <tr>
              <th>Phone Number</th>
              <th>Friendly Name</th>
              <th>Tenant</th>
              <th>Status</th>
              <th>Total Calls</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% numbers.forEach(number => { %>
            <tr>
              <td><strong><%= number.phoneNumber %></strong></td>
              <td><%= number.friendlyName || '-' %></td>
              <td><%= number.tenant.name %></td>
              <td><span class="badge badge-<%= number.status.toLowerCase() %>"><%= number.status %></span></td>
              <td><%= number._count.callSessions %></td>
              <td>
                <form action="/admin/numbers/<%= number.id %>/delete" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Remove</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> AI Voice Receptionist. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>
