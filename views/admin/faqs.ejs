<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FAQ Management - <%= tenant.name %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <a href="/">ü§ñ AI Voice Receptionist</a>
      </div>
      <ul class="nav-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/tenants">Tenants</a></li>
        <li><a href="/admin/numbers">Phone Numbers</a></li>
        <li class="user-menu">
          <span><%= user.email %></span>
          <a href="/logout" class="btn btn-sm">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  
  <main class="main-content">
  <div class="container">
    <div class="page-header">
      <div>
        <h1>FAQ Management</h1>
        <p class="subtitle">Manage FAQs for <%= tenant.name %></p>
      </div>
      <div>
        <a href="/admin/tenants" class="btn btn-secondary">‚Üê Back to Tenants</a>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2>Add New FAQ</h2>
      </div>
      <div class="card-body">
        <form id="faqForm">
          <div class="form-group">
            <label for="category">Category (Optional)</label>
            <input type="text" id="category" name="category" class="form-control" placeholder="e.g., Pricing, Services, Hours">
          </div>

          <div class="form-group">
            <label for="question">Question *</label>
            <input type="text" id="question" name="question" class="form-control" required placeholder="What is your question?">
          </div>

          <div class="form-group">
            <label for="answer">Answer *</label>
            <textarea id="answer" name="answer" class="form-control" rows="4" required placeholder="Provide the answer..."></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Add FAQ</button>
        </form>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2>Existing FAQs</h2>
      </div>
      <div class="card-body">
        <div id="faqList">
          <p class="text-muted">Loading FAQs...</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    const tenantId = '<%= tenant.id %>';
    let faqs = [];

    // Load FAQs
    async function loadFAQs() {
      try {
        const res = await fetch(`/api/tenant/${tenantId}/faqs`);
        const data = await res.json();
        
        if (data.success) {
          faqs = data.faqs;
          renderFAQs();
        } else {
          document.getElementById('faqList').innerHTML = `<p class="text-danger">${data.error}</p>`;
        }
      } catch (error) {
        document.getElementById('faqList').innerHTML = `<p class="text-danger">Failed to load FAQs</p>`;
      }
    }

    // Render FAQs grouped by category
    function renderFAQs() {
      const faqList = document.getElementById('faqList');
      
      if (faqs.length === 0) {
        faqList.innerHTML = '<p class="text-muted">No FAQs yet. Add one above to get started.</p>';
        return;
      }

      // Group by category
      const grouped = {};
      faqs.forEach(faq => {
        const cat = faq.category || 'Uncategorized';
        if (!grouped[cat]) grouped[cat] = [];
        grouped[cat].push(faq);
      });

      let html = '';
      Object.keys(grouped).sort().forEach(category => {
        html += `<div class="faq-category">
          <h3>${category}</h3>
          <div class="faq-items">`;
        
        grouped[category].forEach(faq => {
          html += `
            <div class="faq-item" data-id="${faq.id}">
              <div class="faq-content">
                <div class="faq-question">
                  <strong>Q:</strong> ${escapeHtml(faq.question)}
                </div>
                <div class="faq-answer">
                  <strong>A:</strong> ${escapeHtml(faq.answer)}
                </div>
                <div class="faq-meta">
                  <span class="badge ${faq.isActive ? 'badge-success' : 'badge-disabled'}">
                    ${faq.isActive ? 'Active' : 'Inactive'}
                  </span>
                </div>
              </div>
              <div class="faq-actions">
                <button onclick="editFAQ('${faq.id}')" class="btn btn-sm btn-secondary">Edit</button>
                <button onclick="toggleFAQ('${faq.id}', ${!faq.isActive})" class="btn btn-sm ${faq.isActive ? 'btn-warning' : 'btn-success'}">
                  ${faq.isActive ? 'Disable' : 'Enable'}
                </button>
                <button onclick="deleteFAQ('${faq.id}')" class="btn btn-sm btn-danger">Delete</button>
              </div>
            </div>`;
        });

        html += `</div></div>`;
      });

      faqList.innerHTML = html;
    }

    // Add FAQ
    document.getElementById('faqForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const category = document.getElementById('category').value.trim();
      const question = document.getElementById('question').value.trim();
      const answer = document.getElementById('answer').value.trim();

      try {
        const res = await fetch(`/api/tenant/${tenantId}/faqs`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ category, question, answer })
        });

        const data = await res.json();
        
        if (data.success) {
          document.getElementById('faqForm').reset();
          loadFAQs();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (error) {
        alert('Failed to add FAQ');
      }
    });

    // Toggle FAQ active status
    async function toggleFAQ(faqId, isActive) {
      try {
        const res = await fetch(`/api/tenant/${tenantId}/faqs/${faqId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ isActive })
        });

        const data = await res.json();
        if (data.success) {
          loadFAQs();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (error) {
        alert('Failed to update FAQ');
      }
    }

    // Delete FAQ
    async function deleteFAQ(faqId) {
      if (!confirm('Are you sure you want to delete this FAQ?')) return;

      try {
        const res = await fetch(`/api/tenant/${tenantId}/faqs/${faqId}`, {
          method: 'DELETE'
        });

        const data = await res.json();
        if (data.success) {
          loadFAQs();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (error) {
        alert('Failed to delete FAQ');
      }
    }

    // Edit FAQ (simple implementation)
    function editFAQ(faqId) {
      const faq = faqs.find(f => f.id === faqId);
      if (!faq) return;

      document.getElementById('category').value = faq.category || '';
      document.getElementById('question').value = faq.question;
      document.getElementById('answer').value = faq.answer;

      // Delete old and will create new
      if (confirm('Edit mode: Update the fields above and click Add FAQ. Delete this old version?')) {
        deleteFAQ(faqId);
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Load on page load
    loadFAQs();
  </script>

  <footer class="footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> AI Voice Receptionist. All rights reserved.</p>
    </div>
  </footer>

  <style>
    .faq-category {
      margin-bottom: 2rem;
    }

    .faq-category h3 {
      color: #333;
      border-bottom: 2px solid #007bff;
      padding-bottom: 0.5rem;
      margin-bottom: 1rem;
    }

    .faq-items {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .faq-item {
      display: flex;
      justify-content: space-between;
      align-items: start;
      gap: 1rem;
      padding: 1rem;
      background: #f8f9fa;
      border-radius: 8px;
      border: 1px solid #dee2e6;
    }

    .faq-content {
      flex: 1;
    }

    .faq-question {
      margin-bottom: 0.5rem;
      color: #495057;
    }

    .faq-answer {
      margin-bottom: 0.5rem;
      color: #6c757d;
    }

    .faq-meta {
      margin-top: 0.5rem;
    }

    .faq-actions {
      display: flex;
      gap: 0.5rem;
      flex-shrink: 0;
    }

    .badge {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
      border-radius: 4px;
    }

    .badge-success {
      background: #28a745;
      color: white;
    }

    .badge-disabled {
      background: #6c757d;
      color: white;
    }
  </style>
</main>
</body>
</html>
