<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - AI Voice Receptionist</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <a href="/">ðŸ¤– AI Voice Receptionist</a>
      </div>
      <ul class="nav-menu">
        <li><a href="/tenant/dashboard">Dashboard</a></li>
        <li><a href="/tenant/calls">Calls</a></li>
        <li><a href="/tenant/leads">Leads</a></li>
        <li><a href="/admin/tenants/<%= tenant.id %>/flows">Flows</a></li>
        <li><a href="/tenant/analytics">Analytics</a></li>
        <li><a href="/tenant/settings" class="active">Settings</a></li>
        <li class="user-menu">
          <span><%= user.email %></span>
          <a href="/logout" class="btn btn-sm">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <main class="main-content">
    <div class="container">
      <h1>Settings</h1>

      <div class="card" id="business-hours">
        <h2>Business Hours</h2>
        <p class="text-muted">These hours determine when the conditional flow step considers your business "open".</p>
        <form action="/tenant/settings/business-hours" method="POST">
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Day</th>
                  <th>Open?</th>
                  <th>Opens</th>
                  <th>Closes</th>
                </tr>
              </thead>
              <tbody>
                <% const dayNames = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']; %>
                <% dayNames.forEach((dayLabel, index) => { 
                     const record = businessHours.find(bh => bh.dayOfWeek === index);
                     const isOpen = record ? record.isOpen : false;
                     const openTime = record ? record.openTime : '09:00';
                     const closeTime = record ? record.closeTime : '17:00';
                %>
                  <tr>
                    <td><%= dayLabel %></td>
                    <td>
                      <label>
                        <input type="checkbox" name="day_<%= index %>_isOpen" <%= isOpen ? 'checked' : '' %>>
                        Open
                      </label>
                    </td>
                    <td>
                      <input type="time" name="day_<%= index %>_openTime" value="<%= openTime %>" <%= isOpen ? 'required' : '' %>>
                    </td>
                    <td>
                      <input type="time" name="day_<%= index %>_closeTime" value="<%= closeTime %>" <%= isOpen ? 'required' : '' %>>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>

          <div class="form-group">
            <label>Timezone</label>
            <% const currentTimezone = businessHours.length ? businessHours[0].timezone : 'America/Los_Angeles'; %>
            <select name="timezone" required>
              <% timezones.forEach(tz => { %>
                <option value="<%= tz %>" <%= tz === currentTimezone ? 'selected' : '' %>><%= tz %></option>
              <% }); %>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">Save Business Hours</button>
        </form>
      </div>

      <div class="card" id="holiday-hours">
        <h2>Holiday & Special Hours</h2>
        <p class="text-muted">Add exceptions for specific dates like holidays or special events.</p>

        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (holidayHours.length === 0) { %>
                <tr>
                  <td colspan="4" class="text-muted">No holiday overrides yet.</td>
                </tr>
              <% } else { %>
                <% holidayHours.forEach(holiday => { %>
                  <tr>
                    <td><%= holiday.name %></td>
                    <td><%= new Date(holiday.date).toLocaleDateString() %></td>
                    <td>
                      <% if (holiday.isClosed) { %>
                        <span class="badge badge-danger">Closed</span>
                      <% } else { %>
                        <span class="badge badge-info"><%= holiday.openTime %> - <%= holiday.closeTime %></span>
                      <% } %>
                    </td>
                    <td>
                      <form action="/tenant/settings/holidays/<%= holiday.id %>/delete" method="POST" onsubmit="return confirm('Delete this holiday override?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>

        <h3>Add Holiday</h3>
        <form action="/tenant/settings/holidays" method="POST">
          <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" placeholder="e.g., Thanksgiving" required>
          </div>
          <div class="form-group">
            <label>Date</label>
            <input type="date" name="date" required>
          </div>
          <div class="form-group">
            <label>
              <input type="checkbox" name="isClosed" checked>
              Closed All Day
            </label>
          </div>
          <div class="form-inline" style="gap: 1rem;">
            <div class="form-group">
              <label>Opens</label>
              <input type="time" name="openTime">
            </div>
            <div class="form-group">
              <label>Closes</label>
              <input type="time" name="closeTime">
            </div>
          </div>
          <p class="text-muted">Leave the times blank when "Closed All Day" is enabled.</p>
          <button type="submit" class="btn btn-primary">Add Holiday</button>
        </form>
      </div>

      <div class="card">
        <h2>Receptionist Configuration</h2>
        <form action="/tenant/settings/receptionist" method="POST">
          <div class="form-group">
            <label>Greeting Message</label>
            <textarea name="greetingMessage" rows="3" required><%= config ? config.greetingMessage : '' %></textarea>
          </div>

          <div class="form-group">
            <label>Personality</label>
            <input type="text" name="personality" value="<%= config ? config.personality : 'professional and friendly' %>" required>
          </div>

          <div class="form-group">
            <label>Transfer Prompt</label>
            <textarea name="transferPrompt" rows="2"><%= config ? config.transferPrompt : '' %></textarea>
          </div>

          <div class="form-group">
            <label>Lead Capture Prompt</label>
            <textarea name="leadCapturePrompt" rows="2"><%= config ? config.leadCapturePrompt : '' %></textarea>
          </div>

          <div class="form-group">
            <label>Fallback Message</label>
            <input type="text" name="fallbackMessage" value="<%= config ? config.fallbackMessage : '' %>">
          </div>

          <div class="form-group">
            <label>End Call Message</label>
            <input type="text" name="endCallMessage" value="<%= config ? config.endCallMessage : '' %>">
          </div>

          <button type="submit" class="btn btn-primary">Save Configuration</button>
        </form>
      </div>

      <div class="card">
        <h2>Transfer Targets</h2>
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Priority</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% transferTargets.forEach(target => { %>
              <tr>
                <td><%= target.name %></td>
                <td><%= target.phoneNumber %></td>
                <td><%= target.priority %></td>
                <td><%= target.isActive ? 'Active' : 'Inactive' %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <h3>Add Transfer Target</h3>
        <form action="/tenant/settings/transfer-targets" method="POST" class="form-inline">
          <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" required>
          </div>
          <div class="form-group">
            <label>Phone Number</label>
            <input type="text" name="phoneNumber" placeholder="+15551234567" required>
          </div>
          <div class="form-group">
            <label>Priority</label>
            <input type="number" name="priority" value="1" min="1">
          </div>
          <button type="submit" class="btn btn-primary">Add Target</button>
        </form>
      </div>

      <div class="card">
        <h2>Knowledge Base</h2>
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Category</th>
                <th>Question</th>
                <th>Answer</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% knowledgeBase.forEach(entry => { %>
              <tr>
                <td><%= entry.category %></td>
                <td><%= entry.question %></td>
                <td><%= entry.answer.substring(0, 100) %>...</td>
                <td><%= entry.isActive ? 'Active' : 'Inactive' %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <h3>Add Knowledge Entry</h3>
        <form action="/tenant/settings/knowledge" method="POST">
          <div class="form-group">
            <label>Category</label>
            <input type="text" name="category" placeholder="e.g., hours, pricing" required>
          </div>
          <div class="form-group">
            <label>Question</label>
            <input type="text" name="question" required>
          </div>
          <div class="form-group">
            <label>Answer</label>
            <textarea name="answer" rows="3" required></textarea>
          </div>
          <div class="form-group">
            <label>Keywords (comma-separated)</label>
            <input type="text" name="keywords" placeholder="hours, open, closed">
          </div>
          <button type="submit" class="btn btn-primary">Add Entry</button>
        </form>
      </div>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> AI Voice Receptionist. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>
