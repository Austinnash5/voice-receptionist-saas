<%- include('../layout', { 
  user, 
  tenant,
  title: 'Dashboard',
  activeApp: 'voice',
  userPermissions: [],
  body: `
    <div class="container">
      <h1>${tenant ? tenant.name : 'Dashboard'}</h1>
      <p class="subtitle">Last 30 days</p>

      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-value"><%= stats.totalCalls %></div>
          <div class="stat-label">Total Calls</div>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= stats.completedCalls %></div>
          <div class="stat-label">Completed Calls</div>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= stats.transferredCalls %></div>
          <div class="stat-label">Transferred</div>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= stats.totalLeads %></div>
          <div class="stat-label">Leads Captured</div>
          <% if (stats.newLeads > 0) { %>
            <span class="badge badge-new"><%= stats.newLeads %> new</span>
          <% } %>
        </div>
        <div class="stat-card">
          <div class="stat-value"><%= Math.round(stats.avgCallDuration / 60) %> min</div>
          <div class="stat-label">Avg Call Duration</div>
        </div>
      </div>

      <div class="card" style="margin: 2rem 0; padding: 1.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <h3 style="margin: 0 0 0.5rem 0; color: white;">ðŸ“Š Advanced Analytics Available</h3>
        <p style="margin: 0 0 1rem 0; opacity: 0.9;">Get detailed insights on call volume, peak hours, FAQ trends, and more.</p>
        <a href="/tenant/analytics" class="btn" style="background: white; color: #667eea; font-weight: 600;">View Full Analytics Dashboard â†’</a>
      </div>

      <div class="section">
        <div class="section-header">
          <h2>Recent Calls</h2>
          <a href="/tenant/calls" class="btn">View All</a>
        </div>
        
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Date/Time</th>
                <th>From</th>
                <th>Duration</th>
                <th>Status</th>
                <th>Lead</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% recentCalls.forEach(call => { %>
              <tr>
                <td><%= new Date(call.startTime).toLocaleString() %></td>
                <td><%= call.fromNumber %></td>
                <td><%= call.duration ? Math.round(call.duration / 60) + ' min' : '-' %></td>
                <td><span class="badge badge-<%= call.status.toLowerCase() %>"><%= call.status %></span></td>
                <td>
                  <% if (call.lead) { %>
                    <a href="/tenant/leads/<%= call.lead.id %>" class="badge badge-success">âœ“ Captured</a>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td>
                  <a href="/tenant/calls/<%= call.id %>" class="btn btn-sm">View</a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  `
}) %>
