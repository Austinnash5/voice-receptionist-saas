<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calls - AI Voice Receptionist</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <a href="/">ðŸ¤– AI Voice Receptionist</a>
      </div>
      <ul class="nav-menu">
        <li><a href="/tenant/dashboard">Dashboard</a></li>
        <li><a href="/tenant/calls" class="active">Calls</a></li>
        <li><a href="/tenant/leads">Leads</a></li>
        <li><a href="/tenant/settings">Settings</a></li>
        <li class="user-menu">
          <span><%= user.email %></span>
          <a href="/logout" class="btn btn-sm">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <main class="main-content">
    <div class="container">
      <h1>Call History</h1>

      <div class="table-container">
        <table class="data-table">
          <thead>
            <tr>
              <th>Date/Time</th>
              <th>Call SID</th>
              <th>From</th>
              <th>Duration</th>
              <th>Status</th>
              <th>State</th>
              <th>Transferred</th>
              <th>Lead</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% calls.forEach(call => { %>
            <tr>
              <td><%= new Date(call.startTime).toLocaleString() %></td>
              <td><code><%= call.callSid.substring(0, 10) %>...</code></td>
              <td><%= call.fromNumber %></td>
              <td><%= call.duration ? Math.round(call.duration / 60) + ' min' : '-' %></td>
              <td><span class="badge badge-<%= call.status.toLowerCase() %>"><%= call.status %></span></td>
              <td><%= call.state %></td>
              <td><%= call.transferSuccess ? 'âœ“' : '-' %></td>
              <td>
                <% if (call.lead) { %>
                  <a href="/tenant/leads/<%= call.lead.id %>" class="badge badge-success">âœ“</a>
                <% } else { %>
                  -
                <% } %>
              </td>
              <td>
                <a href="/tenant/calls/<%= call.id %>" class="btn btn-sm">View</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <% if (pagination.totalPages > 1) { %>
      <div class="pagination">
        <% if (pagination.page > 1) { %>
          <a href="?page=<%= pagination.page - 1 %>" class="btn">Previous</a>
        <% } %>
        <span>Page <%= pagination.page %> of <%= pagination.totalPages %></span>
        <% if (pagination.page < pagination.totalPages) { %>
          <a href="?page=<%= pagination.page + 1 %>" class="btn">Next</a>
        <% } %>
      </div>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> AI Voice Receptionist. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>
